<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ru.artempugachev.bakingapp.ui.activity.StepActivity"
    >

    <com.google.android.exoplayer2.ui.SimpleExoPlayerView
        android:id="@+id/stepPlayer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="@dimen/step_description_padding"
        android:layout_margin="@dimen/step_description_margin"
        android:layout_weight="1"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/stepDescription"
            android:textSize="18sp"
            />
    </ScrollView>
</LinearLayout>