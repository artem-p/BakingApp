<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ru.artempugachev.bakingapp.ui.activity.StepActivity"
    >

    <com.google.android.exoplayer2.ui.SimpleExoPlayerView
        android:id="@+id/stepPlayer"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:contentPadding="@dimen/step_card_padding"
        android:layout_margin="@dimen/step_card_margin"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/stepDescription"
            android:textSize="18sp"
            />
    </android.support.v7.widget.CardView>
</LinearLayout>