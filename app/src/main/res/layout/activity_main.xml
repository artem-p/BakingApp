<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.artempugachev.bakingapp.ui.MainActivity">
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recipeRecycler"
            >
    
        </android.support.v7.widget.RecyclerView>
        

        <ProgressBar
            android:id="@+id/recipeProgressBar"
            android:layout_width="@dimen/progress_bar_size"
            android:layout_height="@dimen/progress_bar_size"
            android:layout_gravity="center"
            android:visibility="invisible"
            />


        <TextView
            android:id="@+id/recipeErrorMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/recipe_error_message_padding"
            android:text="@string/recipe_error_message"
            android:textSize="20sp"
            android:visibility="invisible"
            />
    </FrameLayout>
    
</android.support.constraint.ConstraintLayout>
